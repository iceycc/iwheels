{
  "compilerOptions": {
    "baseUrl": "./lib",
    "outDir": "./dist",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": "./lib"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./lib/**/*"
  ]
}
