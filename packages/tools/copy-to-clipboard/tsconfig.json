{
  "compilerOptions": {
    "baseUrl": "./lib",
    "outDir": "./dist",
    "module": "ESNext",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "dom",
      "ESNext"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./src/**/*",
    "./lib/**/*"
  ]
}
